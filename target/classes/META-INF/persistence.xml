<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="ludox" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>data.Category</class>
        <class>data.GameScore</class>
        <class>data.Platforms</class>
        <class>data.Rental</class>
        <class>data.User</class>
        <class>data.Videogame</class>
        <class>data.UserEnabled</class>
        <properties>
            <property name="javax.persistence.cache.storeMode" value="CacheStoreMode.REFRESH"/>
        </properties>
    </persistence-unit>
</persistence>
